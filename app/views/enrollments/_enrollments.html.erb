<div class="table-responsive">
  <table class="table table-striped table-condensed tablesorter">
    <thead>
      <tr>
        <th><%= sort_link(@search, :enrollment_status_id, 'Status') %></th>
        <th><%= sort_link(@search, :project_id, 'Project ID') %></th>
        <th><%= sort_link(@search, :subjId, 'Subject ID') %></th>
        <th><%= sort_link(@search, :homeId, 'Home ID') %></th>
        <th><%= sort_link(@search, :startDate, 'Start Date') %></th>
        <th><%= sort_link(@search, :RAId, 'RA ID') %></th>
        <th><%= sort_link(@search, :eligibility_state_id, 'Eligibility') %></th>
        <th><%= sort_link(@search, :eligibility_sub_state_id, 'Secondary') %></th>
        <th><%= sort_link(@search, :idx, 'Index') %></th>
      </tr>
    </thead>
    <tbody>
      <% enrollments.each do |enrollment|%>
        <tr>
          <td><%= enrollment.enrollment_state.stateId %></td>
          <td><%= enrollment.project.projectId %></td>
          <td><%= enrollment.subjId %></td>
          <td><%= enrollment.homeId %></td>
          <td><%= enrollment.startDate %></td>
          <td><%= enrollment.RAId %></td>
          <td><%= enrollment.eligibility_state.StateId %></td>
          <td><%= enrollment.eligibility_sub_state.SubStateId %></td>
          <td><%= enrollment.idx %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr><th colspan="10"><%= page_entries_info enrollments %></tr>
      <tr><th colspan="10"><%= paginate enrollments, :theme => 'twitter-bootstrap-3' %></tr>
    </tfoot>
  </table>
</div>
